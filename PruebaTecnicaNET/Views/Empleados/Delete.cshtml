@model PruebaTecnicaNET.ViewModels.EmpleadosViewModel.DeleteEmpleadoRequest

@{
    ViewData["Title"] = "Eliminar Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card p-6">
    <section class="hero is-danger">
        <div class="hero-body">
            <p class="title text-center">
                ¿Estas seguro de eliminar a este empleado?
            </p>
        </div>
    </section>
    <h3 class="title is-4 danger"></h3>
    <div>
        <h4 class="title is-5 text-warning">Advertencia</h4>
        <hr />
        <div class="columns">
            <div class="column is-one-quarter">
                @Html.DisplayNameFor(model => model.IdEmpleado)
                <p>@Model.IdEmpleado</p>
            </div>
            <div class="column">
                @Html.DisplayNameFor(model => model.NombreCompleto)
                <p>@Model.NombreCompleto</p>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="text" asp-for="IdEmpleado" class="is-hidden" />
            <div class="field is-grouped">
                <p class="control">
                    <button type="submit" class="button is-success">
                        Confirmar
                    </button>
                </p>
                <p class="control">
                    <a asp-action="Index" class="button is-dark">Cancelar</a>
                </p>
            </div>
        </form>
    </div>
</div>

